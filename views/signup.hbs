  <body class="loginBG" >
    <div class="card position-absolute top-50 start-50 translate-middle" style="width: 30rem;">
      <div class="card-body text-center">
        <a class="header">
          <img src="./images/logo-airbnb.png" alt="logo-airbnb" width="87" height="28"/>
        </a>
        <form action="/auth/signup" method="POST">
          <span class="input-group pt-3">Your Full Name</span>
          <input name="name" class="form-control" type="text" aria-label="default input example">
          <span class="input-group pt-3">Profile Picture</span>
          <input class="form-control" type="text" placeholder="http://..." aria-label="default input example">
          <div class="pt-3 text-start">
            <label for="exampleInputEmail1" class="form-label" >Email address</label>
            <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          </div>
          <div class="pt-2 text-start">
            <label for="exampleInputPassword1" class="form-label" >Password</label>
            <input name="password" type="password" class="form-control" id="exampleInputPassword1">
          </div>
          <div class="pt-3 text-start">            
            <button type="submit" class="btn btn-success">Signup</button>
          </div> 
          <div class="pt-3 text-start">Already Have an Account?<a href="/login.html" class="ps-2">Login</a></div>   
        </form>        
      </div>
    </div>
  </body>